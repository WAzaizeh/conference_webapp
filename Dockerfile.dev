FROM ghcr.io/astral-sh/uv:python3.12-bookworm-slim

WORKDIR /app

# Copy dependency files
COPY pyproject.toml uv.lock ./

# Install dependencies
RUN uv sync

# The app code will be mounted via volume
# No need to COPY app/ here

# Set environment variables
ENV ENVIRONMENT=development
ENV PORT=8080
ENV HOST=0.0.0.0

# Expose port
EXPOSE 8080

# Change working directory to where the code is mounted and run
WORKDIR /app/app
CMD ["uv", "run", "--directory", "/app/app", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080", "--reload"]